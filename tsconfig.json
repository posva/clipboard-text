{
  "include": ["index.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "erasableSyntaxOnly": true,
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true
  }
}
